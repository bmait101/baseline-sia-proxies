	year = {1999},
	note = {ISBN: 0012-9658},
	keywords = {Food webs, δ13C, δ15N, Stable isotopes, Trophic structure, Trophic position, Aquatic consumers, Baseline, Food chains, Primary consumers},
	pages = {1395--1404},
	file = {Vander Zanden, Rasmussen - 1999 - Ecology(2).pdf:/Users/bryanmaitland/Zotero/storage/BU6WQQQ4/Vander Zanden, Rasmussen - 1999 - Ecology(2).pdf:application/pdf;vander_zanden_rasmussen_1999_ecology.pdf:/Users/bryanmaitland/Zotero/storage/SAQLJZ4Z/Vander Zanden, Rasmussen - 1999 - Ecology.pdf:application/pdf},
